<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/gerenciadorImagem">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/txtNomePkmnCaptura"
        android:text="Congratulations you won a NFT !"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="18sp"
        android:background="@drawable/roundshapebranco"
        android:textStyle="bold"
        android:layout_x="10dp"
        android:layout_y="8dp"
        android:padding="5dp"
        android:alpha="0.8"
        android:clickable="false"
        android:layout_margin="5dp"
        android:visibility="visible"/>

    <ImageView
        android:src="@drawable/nft_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:resizeClip="true"
        android:layout_x="0px"
        android:layout_y="0px"
        android:id="@+id/pokemon"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/pokeball"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_x="0px"
        android:layout_y="76dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:clipChildren="false"
        android:scaleType="centerInside"
        android:src="@drawable/pokeball1" />

</AbsoluteLayout>